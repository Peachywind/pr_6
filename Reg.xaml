<Window x:Class="WpfApp7.Reg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp7"
        mc:Ignorable="d"
        Title="Reg" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBox x:Name="Name" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="158" Height="37"/>
            <Button x:Name="send" Content="Я пользователь" HorizontalAlignment="Center" VerticalAlignment="Center" Click="send_Click" Grid.Row="2"/>
            <TextBox x:Name="ID" HorizontalAlignment="Center" Height="36" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Width="158"/>
            <Button Content="Я сервер" HorizontalAlignment="Center" Height="24" Grid.Row="3" VerticalAlignment="Center" Width="64" Click="Button_Click"/>

        </Grid>
    </Grid>
</Window>
